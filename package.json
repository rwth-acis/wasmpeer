{
  "name": "wasmpeer",
  "version": "0.0.1",
  "description": "A P2P Service Framework with WebAssembly",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "test": "mocha -r esm test/main.js",
    "build": "parcel build src/browser/index.html",
    "serve": "node server.js",
    "start:node": "node -r esm src/node/index.js",
    "start:browser": "parcel index.html --port 1000",
    "bootstrap": "node ./node_modules/webrtc-explorer-signalling-server/src -r index.js "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rwth-acis/wasmpeer.git"
  },
  "keywords": [
    "wasm",
    "p2p",
    "js",
    "webassembly"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rwth-acis/wasmpeer/issues"
  },
  "homepage": "https://github.com/rwth-acis/wasmpeer#readme",
  "dependencies": {
    "@wasmer/wasi": "^0.12.0",
    "@wasmer/wasm-transformer": "^0.12.0",
    "@wasmer/wasmfs": "^0.12.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "localforage": "^1.9.0",
    "mocha": "8.3.0",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2",
    "webrtc-explorer": "github:haqiqiar/webrtc-explorer",
    "webrtc-explorer-signalling-server": "github:haqiqiar/webrtc-explorer-signalling-server"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-static-files-copy": "^2.6.0"
  }
}
